<Window x:Class="bank.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bank"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Margin="330,10,0,0" Grid.Row="0" FontSize="35">Логин</Label>
        <TextBox x:Name="Name" Margin="0,0,0,10"  Grid.Row="1" FontSize="30"  Width="350"></TextBox>
        <Label Margin="330,10,0,0" Grid.Row="2" FontSize="35">Пароль</Label>
        <PasswordBox x:Name="Password" Margin="0,0,0,10"  Width="350" Grid.Row="3" FontSize="20"></PasswordBox>
        <Button Margin="15" FontSize="35" Grid.Row="4" Click="Button_Click" >Войти</Button>
    </Grid>
</Window>
